<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#66000000"> <!-- Ripple effect color (semi-transparent black) -->

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/> <!-- Round corners -->
            <solid android:color="@color/DarkGreen"/> <!-- Default background -->
            <stroke android:width="1dp" android:color="@color/MuchDarkerGreen"/> <!-- Border -->
        </shape>
    </item>
</ripple>
