<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow (darker background) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000"/> <!-- Shadow color -->
<!--            <corners android:radius="8dp"/>-->
        </shape>
    </item>

    <!-- Main background shifted slightly down -->
    <item android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/slightDarkGreen"/> <!-- Background color -->
<!--            <corners android:radius="8dp"/>-->
        </shape>
    </item>
</layer-list>
