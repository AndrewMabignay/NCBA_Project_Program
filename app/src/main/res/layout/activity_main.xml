<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
>


    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >
        <!-- =============== HEADER =============== -->
        <FrameLayout
            android:id="@+id/Header"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:elevation="25dp"
        >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ncba_background"
                android:scaleType="centerCrop"
            />

            <!-- FIELDS -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:paddingHorizontal="25dp"
            >
                <ImageView
                    android:id="@+id/openDrawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    android:contentDescription="Open Drawer"
                    android:clickable="true"
                />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ncba_logo"
                    android:layout_marginVertical="14dp"
                    android:layout_marginLeft="10dp"
                />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/headerStatementOne"
                        android:textSize="9sp"
                        android:textColor="@color/lightYellow"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginBottom="3dp"
                        android:shadowColor="#80000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="3"
                    />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/headerStatementTwo"
                        android:textSize="9sp"
                        android:textColor="@color/lightGreen"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginBottom="3dp"
                    />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/headerStatementThree"
                        android:textSize="9sp"
                        android:textColor="@color/lightYellow"
                        android:fontFamily="@font/poppins_medium"
                    />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>




        <!-- Your Main Content Here -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ncba_taytay"
                android:scaleType="centerCrop"
                android:alpha="0.6"
            />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <!-- Shadow -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@drawable/shadow_background"
                        android:layout_gravity="bottom"/>

                    <!-- 58 Anniversary Image -->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fiftyeightanniversary"
                        android:adjustViewBounds="true"/>
                </FrameLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp"
                >

                    <!-- ========= 1. ADMISSION ========= -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="@drawable/home_button"
                        android:padding="20dp"
                        android:layout_weight="1"
                    >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\uf19c"
                            android:textColor="@color/white"
                            android:fontFamily="@font/font_awesome_6_free_solid_900"
                        />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADMISSION"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="14dp"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.002"
                        />
                    </LinearLayout>

                    <!-- ========= 2. ACADEMIC ========= -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:clickable="true"
                        android:background="@drawable/home_button"
                        android:padding="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                    >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\uf02d"
                            android:fontFamily="@font/font_awesome_6_free_solid_900"
                            android:textColor="@color/lightWhite"
                        />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACADEMICS"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="14dp"
                            android:textColor="@color/lightWhite"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.002"
                        />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>


    </LinearLayout>


    <!-- Manual Navigation Drawer (Sliding Panel) -->
    <LinearLayout
        android:id="@+id/manual_drawer"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#333"
        android:orientation="vertical"
        android:padding="16dp">


        <ImageButton
            android:id="@+id/closeDrawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Close Drawer"
        />


        <!-- Manually Add Navigation Items Here -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADMISSION"
            />
        </LinearLayout>
    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>
