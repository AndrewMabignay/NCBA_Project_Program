<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightWhite"
>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTACT US"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:background="@drawable/shadow_subheader_box"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="20dp"
        android:paddingVertical="20dp"
        android:paddingHorizontal="20dp"
        android:letterSpacing="0.03"
    />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarThumbVertical="@drawable/custom_scrollbar"
        android:fadeScrollbars="false"
        android:scrollbarSize="2dp"
        android:nestedScrollingEnabled="true"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
        >
            <!-- 1. ==================== CUBAO CAMPUS ==================== -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CUBAO CAMPUS"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@drawable/shadow_subheader_box_second"
                android:fontFamily="@font/poppins_semibold"
                android:paddingVertical="20dp"
                android:paddingHorizontal="30dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="20dp"
                android:letterSpacing="0.03"
                android:lineHeight="33dp"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
            />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1,2"
                android:background="@color/DarkGreen"
            >


                <!-- Header Row -->
                <TableRow>
                    <TextView
                        android:text="Trunk-line nos. 8913-8785 to 87"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:textStyle="bold"/>
                </TableRow>

                <!-- Data Row 1 -->
                <TableRow>
                    <TextView
                        android:text="1"
                        android:padding="8dp"/>
                    <TextView
                        android:text="John Doe"
                        android:padding="8dp"
                    />
                </TableRow>

                <!-- Data Row 2 -->
                <TableRow>
                    <TextView
                        android:text="2"
                        android:padding="8dp"
                    />
                    <TextView
                        android:text="Jane Smith"
                        android:padding="8dp"
                    />
                </TableRow>

            </TableLayout>




        </LinearLayout>
    </ScrollView>

</LinearLayout>