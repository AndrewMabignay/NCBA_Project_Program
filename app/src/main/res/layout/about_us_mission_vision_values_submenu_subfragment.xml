<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightWhiteGreen"
>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MISSION AND VISION WITH CORE VALUES"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:background="@drawable/shadow_subheader_box"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="20dp"
        android:paddingVertical="20dp"
        android:paddingHorizontal="50dp"
        android:letterSpacing="0.03"
        android:lineHeight="35dp"
    />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:nestedScrollingEnabled="true"
        android:scrollbarSize="2dp"
        android:scrollbarThumbVertical="@drawable/custom_scrollbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="25dp"
            android:orientation="vertical">

            <!--  1. MISSION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal"> <!-- Optional margin for spacing -->

                <!-- Left Separator Line -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@color/DarkGreen" />

                <!-- Text in the Center -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shadow_subheader_box_second"
                    android:fontFamily="@font/poppins_semibold"
                    android:letterSpacing="0.03"
                    android:lineHeight="33dp"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="20dp"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:text="MISSION"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                />

                <!-- Right Separator Line -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@color/DarkGreen" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_medium"
                android:justificationMode="inter_word"
                android:lineHeight="28dp"
                android:paddingBottom="20dp"
                android:text="To be recognized as an academic institution for its responsive and innovative educational programs."
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <!--  2. VISION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Left Separator Line -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@color/DarkGreen" />

                <!-- Text in the Center -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shadow_subheader_box_second"
                    android:fontFamily="@font/poppins_semibold"
                    android:letterSpacing="0.03"
                    android:lineHeight="33dp"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="20dp"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:text="VISION"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <!-- Right Separator Line -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@color/DarkGreen" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_medium"
                android:justificationMode="inter_word"
                android:lineHeight="28dp"
                android:paddingBottom="20dp"
                android:text="The National College of Business and Arts through its educational programs and institutional activities shall produce God-loving, competent and globally competitive professionals to contribute to the progress and development of the nation."
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <!--  3. CORE VALUES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Left Separator Line -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@color/DarkGreen" />

                <!-- Text in the Center -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shadow_subheader_box_second"
                    android:fontFamily="@font/poppins_semibold"
                    android:letterSpacing="0.03"
                    android:lineHeight="33dp"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="20dp"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:text="CORE VALUES"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <!-- Right Separator Line -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@color/DarkGreen" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_medium"
                android:justificationMode="inter_word"
                android:lineHeight="28dp"
                android:paddingBottom="20dp"
                android:text="Commitment\nIntegrity\nService to all\nAccountability"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="13sp"
            />


        </LinearLayout>
    </ScrollView>

</LinearLayout>