<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="match_parent"
>
    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
    >
        <!-- =============== HEADER =============== -->
        <FrameLayout
            android:id="@+id/Header"
            android:layout_width="match_parent"
            android:layout_height="100dp"
        >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ncba_background"
                android:scaleType="centerCrop"
            />

            <!-- FIELDS -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
            >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ncba_logo"
                    android:layout_marginLeft="10dp"
                />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/headerStatementTwo"
                        android:textSize="12sp"
                        android:textColor="@color/lightGreen"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginBottom="3dp"
                        android:lineHeight="25dp"
                        android:layout_marginLeft="5dp"
                    />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/HomeNav"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="start"
        android:paddingVertical="15dp"
        android:paddingHorizontal="20dp"
        android:clickable="true"
    >
        <TextView
            android:textAlignment="center"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="\uf015"
            android:fontFamily="@font/font_awesome_6_free_solid_900"
            android:layout_marginLeft="10dp"
            android:textColor="@color/MuchDarkerGreen"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginHorizontal="12dp"
            android:letterSpacing="0.03"
            android:textColor="@color/MuchDarkerGreen"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/AdmissionNav"
