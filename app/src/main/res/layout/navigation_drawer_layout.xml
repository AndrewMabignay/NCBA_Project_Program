            android:text="Admission"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginHorizontal="12dp"
            android:letterSpacing="0.03"
            android:textColor="@color/MuchDarkerGreen"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
        />
    </LinearLayout>

