<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightWhite"
>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTACT US"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:background="@drawable/shadow_subheader_box"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="20dp"
        android:paddingVertical="20dp"
        android:paddingHorizontal="20dp"
        android:letterSpacing="0.03"
    />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarThumbVertical="@drawable/custom_scrollbar"
        android:fadeScrollbars="false"
        android:scrollbarSize="2dp"
        android:nestedScrollingEnabled="true"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
        >
            <!-- 1. ==================== TELEPHONE DIRECTORY ==================== -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TELEPHONE DIRECTORY"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@drawable/shadow_subheader_box_second"
                android:fontFamily="@font/poppins_semibold"
                android:paddingVertical="20dp"
                android:paddingHorizontal="30dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="20dp"
                android:letterSpacing="0.03"
                android:lineHeight="33dp"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
            >

                <!-- 1. =============== CUBAO CAMPUS =============== -->
                <LinearLayout
                    android:id="@+id/ContactCubao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                    >
                        <ImageView
                            android:id="@+id/ncbaCubao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ncba_cubao"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:stateListAnimator="@anim/image_hover"
                        />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/dark_overlay_effect"
                        />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                        >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="\uf549"
                                android:textColor="@color/lightWhite"
                                android:textSize="16dp"
                                android:fontFamily="@font/font_awesome_6_free_solid_900"
                                android:layout_gravity="bottom|start"
                                android:layout_marginLeft="30dp"
                                android:layout_marginBottom="12dp"
                                android:shadowColor="@color/black"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="3"
                            />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cubao Campus"
                                android:textColor="@color/lightWhite"
                                android:textSize="16dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:layout_gravity="bottom|start"
                                android:layout_marginLeft="12dp"
                                android:layout_marginBottom="12dp"
                                android:shadowColor="@color/black"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="3"
                            />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <!-- 2. =============== TAYTAY CAMPUS =============== -->
                <LinearLayout
                    android:id="@+id/ContactTaytay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:layout_marginTop="12dp"
                >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                    >
                        <ImageView
                            android:id="@+id/ncbaTaytay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ncba_taytay"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:stateListAnimator="@anim/image_hover"
                        />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/dark_overlay_effect"
                        />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                        >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="\uf549"
                                android:textColor="@color/lightWhite"
                                android:textSize="16dp"
                                android:fontFamily="@font/font_awesome_6_free_solid_900"
                                android:layout_gravity="bottom|start"
                                android:layout_marginLeft="30dp"
                                android:layout_marginBottom="12dp"
                                android:shadowColor="@color/black"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="3"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Taytay Campus"
                                android:textColor="@color/lightWhite"
                                android:textSize="16dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:layout_gravity="bottom|start"
                                android:layout_marginLeft="12dp"
                                android:layout_marginBottom="12dp"
                                android:shadowColor="@color/black"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="3"
                            />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <!-- 3. =============== FAIRVIEW CAMPUS =============== -->
                <LinearLayout
                    android:id="@+id/ContactFairview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:layout_marginTop="12dp"
                >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        >
                        <ImageView
                            android:id="@+id/ncbaFairview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ncba_fairview"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:stateListAnimator="@anim/image_hover"
                        />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/dark_overlay_effect"
                        />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                        >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="\uf549"
                                android:textColor="@color/lightWhite"
                                android:textSize="16dp"
                                android:fontFamily="@font/font_awesome_6_free_solid_900"
                                android:layout_gravity="bottom|start"
                                android:layout_marginLeft="30dp"
                                android:layout_marginBottom="12dp"
                                android:shadowColor="@color/black"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="3"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fairview Campus"
                                android:textColor="@color/lightWhite"
                                android:textSize="16dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:layout_gravity="bottom|start"
                                android:layout_marginLeft="12dp"
                                android:layout_marginBottom="12dp"
                                android:shadowColor="@color/black"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="3"
                            />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- TESTING -->
            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
            />


        </LinearLayout>
    </ScrollView>

</LinearLayout>