                                android:layout_gravity="bottom|start"
                                android:layout_marginLeft="30dp"
                                android:layout_marginBottom="12dp"
                                android:shadowColor="@color/black"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="3"
