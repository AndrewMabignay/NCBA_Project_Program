<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/lightWhiteGreen">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FACILITIES"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:background="@drawable/shadow_subheader_box"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="20dp"
        android:paddingVertical="20dp"
        android:paddingHorizontal="40dp"
        android:letterSpacing="0.03"
        android:lineHeight="35dp"
    />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarThumbVertical="@drawable/custom_scrollbar"
        android:fadeScrollbars="false"
        android:scrollbarSize="2dp"
        android:nestedScrollingEnabled="true"

    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="14dp"
            android:paddingBottom="20dp"
        >
            <!-- TAYTAY CAMPUS [TITLE] -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TAYTAY CAMPUS"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@drawable/shadow_subheader_box_second"
                android:fontFamily="@font/poppins_semibold"
                android:paddingVertical="20dp"
                android:paddingHorizontal="30dp"
                android:letterSpacing="0.03"
                android:lineHeight="33dp"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="14dp"
                android:paddingBottom="20dp"
                android:layout_marginHorizontal="20dp"
            >

                <!-- 1. LOBBY FACILITIES -->
                <LinearLayout
                    android:id="@+id/LobbyFacilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:layout_marginTop="15dp"
                >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        >
                        <ImageView
                            android:id="@+id/LobbyBackground"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/facilities_lobby_one"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:stateListAnimator="@anim/image_hover"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/dark_overlay_effect"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="\uf1ad"
                                android:textColor="@color/lightWhite"
                                android:textSize="16dp"
                                android:fontFamily="@font/font_awesome_6_free_solid_900"
                                android:layout_gravity="bottom|start"
                                android:layout_marginLeft="30dp"
                                android:layout_marginBottom="12dp"
                                android:shadowColor="@color/black"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="3"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lobby"
                                android:textColor="@color/lightWhite"
                                android:textSize="16dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:layout_gravity="bottom|start"
                                android:layout_marginLeft="12dp"
                                android:layout_marginBottom="12dp"
                                android:letterSpacing="0.02"
                                android:shadowColor="@color/black"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="3"
                                />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <!-- 2. COMPUTER LABORATORIES FACILITIES -->
