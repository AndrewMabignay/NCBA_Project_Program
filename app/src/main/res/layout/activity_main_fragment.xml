<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F7F7F7">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarThumbVertical="@drawable/custom_scrollbar"
        android:fadeScrollbars="false"
        android:scrollbarSize="2dp"
        android:nestedScrollingEnabled="true"
    >
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        >
            <!--        <ImageView-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="match_parent"-->
            <!--            android:src="@drawable/ncba_taytay"-->
            <!--            android:scaleType="centerCrop"-->
            <!--            android:tint="#660d4f20"-->
            <!--            tools:ignore="UseAppTint"-->
            <!--        />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
            >
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="20dp"
                    >

                    <!-- Shadow -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/shadow_background" />

                    <!-- 58 Anniversary Image -->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fiftyeightanniversary"
                        android:adjustViewBounds="true"
                        />
                </FrameLayout>


                <!-- ============================= FIRST ROW ============================= -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    >

                    <!-- ========= 1. ADMISSION MAIN ========= -->
                    <LinearLayout
                        android:id="@+id/AdmissionMain"
                        android:layout_width="0dp"
                        android:layout_height="175dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:background="@drawable/home_background_button"
                        android:paddingVertical="45dp"
                        android:paddingHorizontal="30dp"
                        android:layout_gravity="center"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\uf549"
                            android:textColor="@color/MuchDarkerGreen"
                            android:textSize="35dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/font_awesome_6_free_solid_900"
                            android:textAlignment="center"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADMISSION"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="13sp"
                            android:textColor="@color/MuchDarkerGreen"
                            android:letterSpacing="0.05"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:lineHeight="20dp"
                            />
                    </LinearLayout>

                    <!-- ========= 2. ACADEMICS MAIN ========= -->
                    <LinearLayout
                        android:id="@+id/AcademicsMain"
                        android:layout_width="0dp"
                        android:layout_height="175dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:background="@drawable/home_button"
                        android:paddingVertical="45dp"
                        android:paddingHorizontal="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\uf02d"
                            android:textColor="@color/lightWhite"
                            android:textSize="30dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/font_awesome_6_free_solid_900"
                            android:textAlignment="center"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACADEMICS"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="11sp"
                            android:textColor="@color/lightWhite"
                            android:letterSpacing="0.05"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:lineHeight="20dp"
                            />
                    </LinearLayout>
                </LinearLayout>

                <!-- ============================= SECOND ROW ============================= -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="25dp"
                    >
                    <!-- ========= 3. ABOUT US MAIN ========= -->
                    <LinearLayout
                        android:id="@+id/AboutUsMain"
                        android:layout_width="0dp"
                        android:layout_height="175dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:background="@drawable/home_button"
                        android:paddingVertical="45dp"
                        android:paddingHorizontal="20dp"
                        android:layout_gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\uf0c0"
                            android:textColor="@color/lightWhite"
                            android:textSize="30dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/font_awesome_6_free_solid_900"
                            android:textAlignment="center"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ABOUT US"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="11sp"
                            android:textColor="@color/lightWhite"
                            android:letterSpacing="0.05"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:lineHeight="20dp"
                            />
                    </LinearLayout>

                    <!-- ========= 4. CONTACT US MAIN ========= -->
                    <LinearLayout
                        android:id="@+id/ContactUsMain"
                        android:layout_width="0dp"
                        android:layout_height="175dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:background="@drawable/home_button"
                        android:paddingVertical="45dp"
                        android:paddingHorizontal="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\uf095"
                            android:textColor="@color/lightWhite"
                            android:textSize="30dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/font_awesome_6_free_solid_900"
                            android:textAlignment="center"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CONTACT US"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="11sp"
                            android:textColor="@color/lightWhite"
                            android:letterSpacing="0.05"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:lineHeight="20dp"
                            />
                    </LinearLayout>
                </LinearLayout>

                <!-- ============================= THIRD ROW ============================= -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="25dp"
                    >
                    <!-- ========= 5. WEB MASTER MAIN ========= -->
                    <LinearLayout
                        android:id="@+id/WebMasterMain"
                        android:layout_width="0dp"
                        android:layout_height="175dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:background="@drawable/home_button"
                        android:paddingVertical="45dp"
                        android:paddingHorizontal="20dp"
                        android:layout_gravity="center"
                    >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\uf5fc"
                            android:textColor="@color/lightWhite"
                            android:textSize="30dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/font_awesome_6_free_solid_900"
                            android:textAlignment="center"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WEB MASTER"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="11sp"
                            android:textColor="@color/lightWhite"
                            android:letterSpacing="0.05"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:lineHeight="20dp"
                            />
                    </LinearLayout>

                    <!-- ========= 6. ENTERTAINMENT MAIN ========= -->
                    <LinearLayout
                        android:id="@+id/EntertainmentMain"
                        android:layout_width="0dp"
                        android:layout_height="175dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:background="@drawable/home_button"
                        android:paddingVertical="45dp"
                        android:paddingHorizontal="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\uf091"
                            android:textColor="@color/lightWhite"
                            android:textSize="30dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/font_awesome_6_free_solid_900"
                            android:textAlignment="center"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ENTERTAINMENT"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="11sp"
                            android:textColor="@color/lightWhite"
                            android:letterSpacing="0.05"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:lineHeight="20dp"
                            />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CAMPUS - WIDE NEWS AND EVENTS"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:background="@drawable/shadow_subheader_box"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginTop="20dp"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="20dp"
                    android:letterSpacing="0.03"
                />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                />


                <!-- WIDE NEWS AND EVENTS -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="25dp"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@color/lightWhite"
                    >

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="6dp"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:id="@+id/ImagingEventSwitcher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/blood_donation_event_one"
                                android:scaleType="centerCrop"
                            />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:lineHeight="28dp"
                            android:justificationMode="inter_word"
                            android:text="Life Saving Blood Donation"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:layout_gravity="start"
                        />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/poppins_medium"
                            android:lineHeight="28dp"
                            android:justificationMode="inter_word"
                            android:text="Community Outreach Program, Events, Fairview"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                        />

                        <!-- READ MORE BUTTON -->
                        <LinearLayout
                            android:id="@+id/BloodDonationEventOne"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@drawable/home_background_button"
                            android:layout_margin="20dp"
                            android:clickable="true"
                        >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:fontFamily="@font/poppins_medium"
                                android:lineHeight="28dp"
                                android:justificationMode="inter_word"
                                android:text="Read More"
                                android:textColor="@color/lightWhite"
                                android:textSize="13sp"
                            />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </FrameLayout>
    </ScrollView>


</LinearLayout>