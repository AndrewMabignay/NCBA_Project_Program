<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightWhite"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CREDENTIALS"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:background="@drawable/shadow_subheader_box"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="20dp"
        android:paddingVertical="20dp"
        android:paddingHorizontal="20dp"
        android:letterSpacing="0.03"
    />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarThumbVertical="@drawable/custom_scrollbar"
        android:fadeScrollbars="false"
        android:scrollbarSize="2dp"
        android:nestedScrollingEnabled="true"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        >
            <!-- 1. ==================== PROCEDURES TO SECURE TRANSCRIPT OF RECORD (TOR) / DIPLOMA / TRANSFER CREDENTIAL / CERTIFICATION ==================== -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PROCEDURES TO SECURE TRANSCRIPT OF RECORD (TOR) / DIPLOMA / TRANSFER CREDENTIAL / CERTIFICATION"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@drawable/shadow_subheader_box_second"
                android:fontFamily="@font/poppins_semibold"
                android:paddingVertical="20dp"
                android:paddingHorizontal="30dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="20dp"
                android:letterSpacing="0.03"
                android:lineHeight="33dp"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/poppins_medium"
                android:justificationMode="inter_word"
                android:lineHeight="28dp"
                android:text="@string/credentialsFirstStatement"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:paddingLeft="10dp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/poppins_medium"
                android:justificationMode="inter_word"
                android:lineHeight="28dp"
                android:text="@string/credentialsSecondStatement"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginTop="20dp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/poppins_medium"
                android:justificationMode="inter_word"
                android:lineHeight="28dp"
                android:text="@string/credentialsThirdStatement"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:paddingLeft="10dp"
                android:layout_marginTop="20dp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/poppins_medium"
                android:justificationMode="inter_word"
                android:lineHeight="28dp"
                android:text="@string/credentialsFourthStatement"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginTop="20dp"
            />

            <!-- 2. ==================== CORRECTION OF PERSONAL INFORMATION ==================== -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CORRECTION OF PERSONAL INFORMATION"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@drawable/shadow_subheader_box_second"
                android:fontFamily="@font/poppins_semibold"
                android:paddingVertical="20dp"
                android:paddingHorizontal="30dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="20dp"
                android:letterSpacing="0.03"
                android:lineHeight="33dp"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/poppins_semibold"
                android:justificationMode="inter_word"
                android:lineHeight="28dp"
                android:text="@string/credentialsTwoFirstStatement"
                android:textColor="@color/black"
                android:textSize="13sp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/poppins_medium"
                android:justificationMode="inter_word"
                android:lineHeight="28dp"
                android:text="@string/credentialsTwoSecondStatement"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginTop="20dp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/poppins_medium"
                android:justificationMode="inter_word"
                android:lineHeight="28dp"
                android:text="@string/credentialsTwoThirdStatement"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginTop="20dp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/poppins_medium"
                android:lineHeight="28dp"
                android:text="@string/credentialsTwoFourthStatement"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/poppins_medium"
                android:justificationMode="inter_word"
                android:lineHeight="28dp"
                android:text="@string/credentialsTwoFifthStatement"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
            />

        </LinearLayout>
    </ScrollView>

</LinearLayout>